<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mytijian.mediator.company.migrate.dao.user.AccountRelationshipFailMapper">
    <resultMap id="AccountRelationFailResultMap" type="com.mytijian.mediator.company.migrate.dao.dataobj.user.AccountRelationFail">
        <id column="id" property="id" />
        <result column="manager_id" property="managerId"/>
        <result column="account_id" property="accountId"/>
        <result column="company_id" property="companyId"/>
        <result column="new_company_id" property="newCompanyId"/>
        <result column="organization_id" property="organizationId"/>
        <result column="organization_type" property="organizationType"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <sql id="relationFailColumns">
        id,
        manager_id,
        account_id,
        company_id,
        new_company_id,
        organization_id,
        organization_type,
        create_time,
        update_time
    </sql>

    <select id="selectAccountRelationshipFailsExamCompanyIdIsNull" resultMap="AccountRelationFailResultMap">
        select
        <include refid="relationFailColumns"/>
        from tb_account_relationship_fail
        WHERE
        new_company_id IS NULL
        AND
        id >= #{nowId}
        limit #{limit}
    </select>

    <update id="updateAccountFailRelationship">
        UPDATE tb_account_relationship_fail
        SET
        <if test="newCompanyId != null">
            new_company_id = #{newCompanyId}
        </if>
        <if test="organizationId != null">
            , organization_id = #{organizationId}
        </if>
        <if test="organizationType != null">
            , organization_type = #{organizationType}
        </if>
        WHERE
        id = #{id}
    </update>
</mapper>