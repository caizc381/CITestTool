<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mytijian.mediator.company.migrate.dao.CompanyOperationLogMapper">

	<resultMap id="companyOpeationLogMap" type="com.mytijian.mediator.company.migrate.dao.dataobj.CompanyOperationLogDO">
		<id column="id" property="id" />
		<result column="gmt_created" property="gmtCreated" jdbcType="DATE"/>
		<result column="gmt_modified" property="gmtModified" jdbcType="DATE"/>
		<result column="table_name" property="tableName" jdbcType="VARCHAR"/>
		<result column="table_pk_id" property="tablePrimaryKeyId" jdbcType="INTEGER"/>
		<result column="operation_type" property="operationType" jdbcType="VARCHAR"/>
		<result column="is_completed" property="completed" jdbcType="VARCHAR"/>
		<result column="interface_name" property="interfaceName" jdbcType="VARCHAR"/>
	</resultMap>
	
	<sql id="columns">
		id,
		gmt_created,
		gmt_modified,
		table_name,
		table_pk_id,
		operation_type,
		is_completed,
		interface_name
	</sql>
	
	<sql id="columns_without_id">
		gmt_created,
		gmt_modified,
		table_name,
		table_pk_id,
		operation_type,
		is_completed,
		interface_name
	</sql>
	
	<select id="insert" parameterType="com.mytijian.mediator.company.migrate.dao.dataobj.CompanyOperationLogDO">
		insert into tb_company_operation_log (<include refid="columns_without_id"/>)
		values(
			now(),
			now(),
			#{tableName},
			#{tablePrimaryKeyId},
			#{operationType},
			#{completed},
			#{interfaceName}
		)
	</select>
	
	<select id="selectByCompleted" resultMap="companyOpeationLogMap">
		select <include refid="columns"/>
		from 
			tb_company_operation_log
		where 
			is_completed = #{completed}
	</select>
	
	<update id="updateIsCompleted">
		update 
			tb_company_operation_log
		set 
			is_completed = #{completed},
			gmt_modified = now()
		where 
			id = #{id}
	</update>
	
	<update id="batchUpdateIsCompleted">
		update
			tb_company_operation_log
		set 
			is_completed = #{completed},
			gmt_modified = now()
		where 
			id in 
			<foreach collection="idList" open="(" close=")" item="item" separator=",">
				#{item}
			</foreach>
	</update>
</mapper>