<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mytijian.mediator.company.migrate.dao.card.CardBaseMapper">
    <resultMap id="CardBatchResultMap" type="com.mytijian.mediator.company.migrate.dao.dataobj.card.CardBase">
        <id column="id" property="id" />
        <result column="company_id" property="companyId" />
        <result column="new_company_id" property="newCompanyId" />
        <result column="organization_type" property="organizationType" />
        <result column="operator_id" property="managerId" />
    </resultMap>

    <resultMap id="CardExamNoteResultMap" type="com.mytijian.mediator.company.migrate.dao.dataobj.card.CardBase">
        <id column="id" property="id" />
        <result column="company_id" property="companyId" />
        <result column="new_company_id" property="newCompanyId" />
        <result column="organization_type" property="organizationType" />
        <result column="account_id" property="managerId" />
    </resultMap>

    <resultMap id="ManagerCardRelationResultMap" type="com.mytijian.mediator.company.migrate.dao.dataobj.card.CardBase">
        <id column="card_id" property="id" />
        <result column="exam_company_id" property="companyId" />
        <result column="new_company_id" property="newCompanyId" />
        <result column="organization_type" property="organizationType" />
        <result column="manager_id" property="managerId" />
    </resultMap>

    <select id="selectCardBatchesNewCompanyIdIsNull" resultMap="CardBatchResultMap">
        SELECT id,
        company_id,
        new_company_id,
        organization_type,
        operator_id
        FROM tb_card_batch
        WHERE
        (new_company_id IS NULL
        OR
        organization_type IS NULL)
        AND
        id >= #{nowId}
        limit #{limit}
    </select>

    <update id="updateCardBatch">
        UPDATE tb_card_batch
        SET
        <if test="newCompanyId != null">
            new_company_id = #{newCompanyId}
        </if>
        <if test="organizationType != null">
            , organization_type = #{organizationType}
        </if>
        WHERE
        id = #{id}
    </update>

    <select id="selectCardExamNoteNewCompanyIdIsNull" resultMap="CardExamNoteResultMap">
        SELECT id,
        company_id,
        new_company_id,
        organization_type,
        account_id
        FROM tb_card_exam_note
        WHERE
        (new_company_id IS NULL
        OR
        organization_type IS NULL)
        AND
        id >= #{nowId}
        limit #{limit}
    </select>

    <update id="updateCardExamNote">
        UPDATE tb_card_exam_note
        SET
        <if test="newCompanyId != null">
            new_company_id = #{newCompanyId}
        </if>
        <if test="organizationType != null">
            , organization_type = #{organizationType}
        </if>
        WHERE
        id = #{id}
    </update>

    <select id="selectManagerCardRelationNewCompanyIdIsNull" resultMap="ManagerCardRelationResultMap">
        SELECT card_id,
        exam_company_id,
        new_company_id,
        organization_type,
        manager_id
        FROM tb_manager_card_relation
        WHERE
        (new_company_id IS NULL
        OR
        organization_type IS NULL)
        AND
        card_id >= #{nowId}
        limit #{limit}
    </select>

    <update id="updateManagerCardRelation">
        UPDATE tb_manager_card_relation
        SET
        <if test="newCompanyId != null">
            new_company_id = #{newCompanyId}
        </if>
        <if test="organizationType != null">
            , organization_type = #{organizationType}
        </if>
        WHERE
        card_id = #{id}
    </update>
</mapper>