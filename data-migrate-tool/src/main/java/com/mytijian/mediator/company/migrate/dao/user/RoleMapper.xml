<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mytijian.mediator.company.migrate.dao.user.RoleMapper">

    <resultMap id="RoleResultMap" type="com.mytijian.mediator.company.migrate.dao.dataobj.user.Role">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="description" property="description" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <sql id="columns">
        id,
        name,
        description,
        create_time,
        update_time
    </sql>

    <select id="getAccountRoles" resultMap="RoleResultMap">
        select
        b.id,
        b.name,
        b.description
        from tb_account_role a
        left join
        tb_role b
        on a.role_id = b.id
        where a.account_id = #{accountId}
    </select>

</mapper>