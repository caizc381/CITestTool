<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mytijian.admin.dao.rbac.dao.RoleDepartmentMenuMapper">

	<resultMap id="roleDepartmentMenuMapResult"
		type="com.mytijian.admin.dao.rbac.dataobject.RoleDepartmentMenuDO">
		<id column="id" property="id" />
		<result column="role_department_id" property="roleDepartmentId" />
		<result column="menu_id" property="menuId" />
	</resultMap>

	<sql id="baseColumns">
		id,
		role_department_id,
		menu_id
	</sql>

	<insert id="insertBatch">
		insert into tb_role_department_menu
		(
		`role_department_id`,
		`menu_id`
		)
		values
		<foreach collection="menuIdList" item="menuId" index="index"
			separator=",">
			(
			#{roleDeaprtmentMenuId},
			#{menuId}
			)
		</foreach>
	</insert>

	<delete id="deleteByRoleId">
		delete from tb_role_department_menu where role_id =
		#{roleId}
	</delete>

	<select id="queryMenuIdList" resultType="Integer">
		select menu_id from
		tb_role_department_menu where role_id = #{value}
	</select>

	<delete id="deleteByEmployeeId">
		delete from tb_role_department_menu where employee_id
		= #{employeeId}
	</delete>

	<select id="selectByRoleDepartmentIds" resultMap="roleDepartmentMenuMapResult">
		select
		<include refid="baseColumns" />
		from tb_role_department_menu where role_department_id in
		<foreach collection="list" index="index" item="roleId" open="("
			separator="," close=")">
			#{roleId}
		</foreach>
	</select>
	
	<select id="selectByRoleDepartmentId" resultMap="roleDepartmentMenuMapResult">
		select
		<include refid="baseColumns" />
		from tb_role_department_menu where role_department_id = #{roleDepartmentId}
	</select>

	<select id="selectByIds" resultMap="roleDepartmentMenuMapResult">
		select
		<include refid="baseColumns" />
		from tb_role_department_menu where id in
		<foreach collection="list" index="index" item="id" open="("
			separator="," close=")">
			#{id}
		</foreach>
	</select>
	
	<!-- <select id="selectByRoleDepartmentIds" resultMap="roleDepartmentMenuMapResult">
		select
		<include refid="baseColumns" />
		from tb_role_department_menu where role_department_id in
		<foreach collection="list" index="index" item="roleDepartmentId" open="("
			separator="," close=")">
			#{roleDepartmentId}
		</foreach>
	</select> -->
	
	<delete id="deleteByRoleDepartmentId">
		delete from tb_role_department_menu where role_department_id = #{roleDepartmentId}
	</delete>
	
	<delete id="deleteByRoleDepartmentIds">
		delete from tb_role_department_menu where role_department_id in 
			<foreach collection="roleDepartmentIds" index="index" item="id" open="("
			separator="," close=")">
			#{id}
		</foreach>
	</delete>
	
</mapper>