<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	   xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd  
        http://www.springframework.org/schema/context  
   	    http://www.springframework.org/schema/context/spring-context-3.0.xsd  
        http://code.alibabatech.com/schema/dubbo   
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

	 <dubbo:application name="ops_dubbo" owner="ops_dubbo" />
     <dubbo:monitor protocol="registry" />
     
     <dubbo:registry protocol="zookeeper" address="${dubbo_registry_address}" />

     <dubbo:protocol name="dubbo" port="${dubbo_ops_protocol_port}" threadpool="cached" />
	
	<!-- service -->
   	<dubbo:service interface="com.mytijian.admin.api.common.service.LogService" ref="logService" timeout="${dubbo_timout}" retries="${dubbo_retries}"  version="${dubbo_ops_provider_version}"></dubbo:service>
	<dubbo:service interface="com.mytijian.admin.shiro.remote.RemoteServiceInterface" ref="remoteServiceInterface" version="${dubbo_ops_provider_version}"></dubbo:service>
	
</beans> 

