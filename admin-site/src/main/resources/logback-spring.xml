<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <include resource="org/springframework/boot/logging/logback/base.xml" />
    <logger name="sample.logback" level="DEBUG" />
    <!--<property resource="application.properties" />-->


    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern><![CDATA[
[%d{yyyy-MM-dd HH:mm:ss}] [uid=%X{uid},uri=%X{uri},host=%X{host},ref=%X{referrer},ua=%X{ua}]  %-5level %logger{35} - %m%n
            ]]></pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>

    <appender name="mediatorproject"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <encoder>
            <pattern><![CDATA[
[%d{yyyy-MM-dd HH:mm:ss}] [uid=%X{uid},uri=%X{uri},host=%X{host},ref=%X{referrer},ua=%X{ua}]  %-5level %logger{35} - %m%n
            ]]></pattern>
            <charset>utf8</charset>
        </encoder>
        <file>admin.project.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>admin.project.%d{yyyy-MM-dd}-%i.log</fileNamePattern>
            <MaxHistory>7</MaxHistory>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>300MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>

    <appender name="infolog"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <encoder>
            <pattern><![CDATA[
[%d{yyyy-MM-dd HH:mm:ss}] [uid=%X{uid},uri=%X{uri},host=%X{host},ref=%X{referrer},ua=%X{ua}]  %-5level %logger{35} - %m%n
            ]]></pattern>
            <charset>utf8</charset>
        </encoder>
        <file>admin.info.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>admin.info.%d{yyyy-MM-dd}-%i.log</fileNamePattern>
            <MaxHistory>7</MaxHistory>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>300MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>

    <appender name="warnlog"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <encoder>
            <pattern><![CDATA[
[%d{yyyy-MM-dd HH:mm:ss}] [uid=%X{uid},uri=%X{uri},host=%X{host},ref=%X{referrer},ua=%X{ua}]  %-5level %logger{35} - %m%n
            ]]></pattern>
            <charset>utf8</charset>
        </encoder>
        <file>admin.warn.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>admin.warn.%d{yyyy-MM-dd}-%i.log</fileNamePattern>
            <MaxHistory>7</MaxHistory>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>300MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>

    <appender name="errorlog"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <encoder>
            <pattern><![CDATA[
[%d{yyyy-MM-dd HH:mm:ss}] [uid=%X{uid},uri=%X{uri},host=%X{host},ref=%X{referrer},ua=%X{ua}]  %-5level %logger{35} - %m%n
            ]]></pattern>
            <charset>utf8</charset>
        </encoder>
        <file>admin.error.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>admin.error.%d{yyyy-MM-dd}-%i.log</fileNamePattern>
            <MaxHistory>7</MaxHistory>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>300MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>


    <appender name="sqllog"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <encoder>
            <pattern><![CDATA[
[%d{yyyy-MM-dd HH:mm:ss}] [uid=%X{uid},uri=%X{uri},host=%X{host},ref=%X{referrer},ua=%X{ua}]  %-5level %logger{35} - %m%n
            ]]></pattern>
            <charset>utf8</charset>
        </encoder>
        <file>admin.sql.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>admin.sql.%d{yyyy-MM-dd}-%i.log</fileNamePattern>
            <MaxHistory>7</MaxHistory>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>300MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <!--<filter class="ch.qos.logback.classic.filter.LevelFilter">-->
            <!--<level>error</level>-->
            <!--<onMatch>ACCEPT</onMatch>-->
            <!--<onMismatch>DENY</onMismatch>-->
        <!--</filter>-->
    </appender>

    <!-- graylog -->
    <appender name="gelfAppender" class="biz.paluch.logging.gelf.logback.GelfLogbackAppender">
        <host>udp:10.252.12.109</host>
        <port>12201</port>
        <version>1.1</version>
        <facility>ops-admin</facility>
        <extractStackTrace>true</extractStackTrace>
        <filterStackTrace>true</filterStackTrace>
        <mdcProfiling>true</mdcProfiling>
        <timestampPattern>yyyy-MM-dd HH:mm:ss,SSSS</timestampPattern>
        <maximumMessageSize>8192</maximumMessageSize>

        <!-- This are static fields -->
        <additionalFields>fieldName1=fieldValue1,fieldName2=fieldValue2</additionalFields>
        <!-- Optional: Specify field types -->
        <additionalFieldTypes>fieldName1=String,fieldName2=Double,fieldName3=Long</additionalFieldTypes>

        <!-- This are fields using MDC -->
        <mdcFields>mdcField1,mdcField2</mdcFields>
        <dynamicMdcFields>mdc.*,(mdc|MDC)fields</dynamicMdcFields>
        <includeFullMdc>true</includeFullMdc>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>



    <logger name="com.mytijian" additivity="false">
        <appender-ref ref="infolog"/>
        <appender-ref ref="warnlog"/>
        <appender-ref ref="errorlog"/>
        <appender-ref ref="mediatorproject"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="org.springframework" additivity="false">
        <appender-ref ref="errorlog" />
         <appender-ref ref="gelfAppender"/>
        <appender-ref ref="mediatorproject"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="org.apache.commons" additivity="false">
        <appender-ref ref="errorlog" />
         <appender-ref ref="gelfAppender"/>
        <appender-ref ref="mediatorproject"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="org.mybatis.spring" additivity="false">
        <appender-ref ref="sqllog" />
         <appender-ref ref="gelfAppender"/>
        <appender-ref ref="mediatorproject"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="com.alibaba.druid" additivity="false">
        <appender-ref ref="sqllog" />
         <appender-ref ref="gelfAppender"/>
        <appender-ref ref="mediatorproject"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <root>
        <appender-ref ref="mediatorproject"/>
    </root>

</configuration>