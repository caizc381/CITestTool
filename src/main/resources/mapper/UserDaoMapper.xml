<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mytijian.account.mapper.UserMapper">
	<resultMap id="userMap" type="com.mytijian.account.model.User">
		<id column="id" property="id"/>
		<result column="account_id" property="accountId"/>
		<result column="username" property="username"/>
		<result column="password" property="password"/>
		<result column="source" property="source"/>
		<result column="system" property="system"/>
		<result column="url" property="url"/>
		<result column="create_time" property="createTime" />
		<result column="update_time" property="updateTime" />
	</resultMap>
	
	<sql id="columns">
			id,
			account_id,
			username,
			password,
			source,
			system,
			url,
			create_time,
			update_time
	</sql>
	
	<select id="getUserInfo" resultMap="UserResultMap">
		select <include refid="columns"/>
		from tb_user 
		where
		   	username=#{username} and password=#{password}
	</select>
	
	<select id="getList" parameterType="map" resultMap="userMap">
		SELECT * FROM tb_user
		where username=${username} order by id desc
	</select>
</mapper>